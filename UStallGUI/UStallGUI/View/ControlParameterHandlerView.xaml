<UserControl x:Class="UStallGUI.View.ControlParameterHandlerView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:UStallGUI.View"
             xmlns:viewmodel="clr-namespace:UStallGUI.ViewModel" d:DataContext="{d:DesignInstance Type=viewmodel:ControlParameterHandlerViewModel}"
             mc:Ignorable="d"
             d:DesignHeight="650" d:DesignWidth="750" Background="White">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="500" />
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <ComboBox Margin="10" SelectedIndex="{Binding DirectionSelectedIndex}">
            <ComboBoxItem>Translation: Z-Axis (Forward/Backward)</ComboBoxItem>
            <ComboBoxItem>Translation: X-Axis (Left/Right)</ComboBoxItem>
            <ComboBoxItem>Translation: Y-Axis (Up/Down)</ComboBoxItem>
            <ComboBoxItem>Rotation: Z-Axis</ComboBoxItem>
            <ComboBoxItem>Rotation: X-Axis</ComboBoxItem>
            <ComboBoxItem>Rotation: Y-Axis (Turn in Position)</ComboBoxItem>
        </ComboBox>
        <Grid Grid.Row="1" Grid.Column="0" Grid.RowSpan="2" VerticalAlignment="Top" Width="500" Height="500">
            <Viewbox Stretch="Uniform">
                <Image Source="/ROV_Model.png" />
            </Viewbox>
            <TextBox Width="50" Height="30" VerticalAlignment="Top" Margin="225,71,225,0" Background="Aquamarine" Text="{Binding CurrentShownMotorValues.HM1}" />
            <TextBox Width="50" Height="30" VerticalAlignment="Top" Margin="35,328,415,0" Background="Aquamarine" Text="{Binding CurrentShownMotorValues.HM2}" />
            <TextBox Width="50" Height="30" VerticalAlignment="Top" Margin="404,328,46,0" Background="Aquamarine" Text="{Binding CurrentShownMotorValues.HM3}" />
            <TextBox Width="50" Height="30" VerticalAlignment="Top" Margin="10,159,440,0" Background="Aquamarine" Text="{Binding CurrentShownMotorValues.VM1}" />
            <TextBox Width="50" Height="30" VerticalAlignment="Top" Margin="440,159,10,0" Background="Aquamarine" Text="{Binding CurrentShownMotorValues.VM2}" />
            <TextBox Width="50" Height="30" VerticalAlignment="Top" Margin="225,446,225,0" Background="Aquamarine" Text="{Binding CurrentShownMotorValues.VM3}" />
        </Grid>
        <Grid Grid.Column="1" Grid.RowSpan="2">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition />
            </Grid.RowDefinitions>
            <Button Grid.Column="1" Margin="10" Content="Pull Direction Values From LCE" Command="{Binding PullDirectionValuesFromLCE_Command}"/>
            <Button Grid.Row="1" Grid.Column="1" Margin="10" Content="Apply Direction Values To LCE"  Command="{Binding ApplyDirectionValuesToLCE_Command}"/>
            <Button Grid.Row="2" Grid.Column="1" Margin="10" Content="Load Current Direction Values From PC" Command="{Binding LoadDirectionValuesFromPC_Command}"/>
            <Button Grid.Row="3" Grid.Column="1" Margin="10" Content="Save Current Direction Values to PC" Command="{Binding SaveDirectionValuesToPC_Command}" />
        </Grid>
    </Grid>
</UserControl>