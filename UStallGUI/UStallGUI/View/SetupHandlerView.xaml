<UserControl x:Class="UStallGUI.View.SetupHandlerView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:UStallGUI.View"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800" Background="White">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <GroupBox Margin="5" Header="LCE Setup">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="100"/>
                    <ColumnDefinition Width="100"/>
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <Label Content="COM Port:" VerticalAlignment="Center"/>
                <TextBox Grid.Column="1" Background="AliceBlue" Margin="5"/>
                <Button Grid.Column="2" Margin="5" Content="Connect To LCE"/>
                <Label Grid.Row="1" Content="Rotors:" VerticalAlignment="Center"/>
                <Button Grid.Row="1" Grid.Column="1" Margin="5" Content="Init"/>
                <Button Grid.Row="1" Grid.Column="2" Margin="5" Content="Deinit"/>
                <Label Grid.Row="2"  Content="Control Type:" VerticalAlignment="Center"/>
                <ComboBox Grid.Row="2" Grid.Column="1" Margin="5" SelectedIndex="2">
                    <ComboBoxItem>None</ComboBoxItem>
                    <ComboBoxItem>Manual</ComboBoxItem>
                    <ComboBoxItem>Controller</ComboBoxItem>
                    <ComboBoxItem>Gyro Assisted Controller</ComboBoxItem>
                </ComboBox>
                <Label Grid.Row="3"  Content="Communication Frequency:" VerticalAlignment="Center"/>
                <TextBox Grid.Row="3" Grid.Column="1" Margin="5" Background="AliceBlue"/>
                <Button Grid.Row="3" Grid.Column="2" Margin="5" Content="Apply"/>
                <Label Grid.Row="4"  Content="Reset Error" VerticalAlignment="Center"/>
                <Button Grid.Row="4" Grid.Column="1" Margin="5" Content="Reset"/>


            </Grid>
        </GroupBox>
        <GroupBox Grid.Column="1" Margin="5" Header="Manual Control">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="50"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="50"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="50"/>
                </Grid.ColumnDefinitions>
                <Label Grid.Row="0" Grid.Column="0" Content="VM1" VerticalAlignment="Center"/>
                <Label Grid.Row="0" Grid.Column="2" Content="VM2" VerticalAlignment="Center"/>
                <Label Grid.Row="0" Grid.Column="4" Content="VM3" VerticalAlignment="Center"/>
                <Label Grid.Row="1" Grid.Column="0" Content="HM1" VerticalAlignment="Center"/>
                <Label Grid.Row="1" Grid.Column="2" Content="HM2" VerticalAlignment="Center"/>
                <Label Grid.Row="1" Grid.Column="4" Content="HM3" VerticalAlignment="Center"/>

                <TextBox Grid.Row="0" Grid.Column="1" Margin="5" Background="AliceBlue"/>
                <TextBox Grid.Row="0" Grid.Column="3" Margin="5" Background="AliceBlue"/>
                <TextBox Grid.Row="0" Grid.Column="5" Margin="5" Background="AliceBlue"/>
                <TextBox Grid.Row="1" Grid.Column="1" Margin="5" Background="AliceBlue"/>
                <TextBox Grid.Row="1" Grid.Column="3" Margin="5" Background="AliceBlue"/>
                <TextBox Grid.Row="1" Grid.Column="5" Margin="5" Background="AliceBlue"/>

                <Label Grid.Row="2" Grid.Column="0" Content="All Vertical" VerticalAlignment="Center"/>
                <Label Grid.Row="2" Grid.Column="2" Content="All Horizontal" VerticalAlignment="Center"/>
                <Label Grid.Row="2" Grid.Column="4" Content="All" VerticalAlignment="Center"/>
                <TextBox Grid.Row="2" Grid.Column="1" Margin="5" Background="AliceBlue"/>
                <TextBox Grid.Row="2" Grid.Column="3" Margin="5" Background="AliceBlue"/>
                <TextBox Grid.Row="2" Grid.Column="5" Margin="5" Background="AliceBlue"/>

                <Button Content="Reset" Grid.Row="3" Grid.ColumnSpan="6" VerticalAlignment="Center" HorizontalAlignment="Center" Width="200"/>


            </Grid>
        </GroupBox>
    </Grid>
</UserControl>
